<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="dz_payroll_config_settings_view_form" model="ir.ui.view">
            <field name="name">dz.payroll.config.settings.view.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id"
                   ref="base.res_config_settings_view_form"/> <!-- or ref="hr_payroll.res_config_settings_view_form" if hr_payroll is installed, but om_hr_payroll is primary -->
            <field name="arch" type="xml">
                <xpath expr="//div[@id='payroll_settings']"
                       position="inside"> <!-- Adjust xpath if needed based on om_hr_payroll config view -->
                    <h2>Algeria Payroll Settings</h2>
                    <div class="row mt16 o_settings_container" id="dz_payroll_localization_settings">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="missing_hour_penalty_amount"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="missing_hour_penalty_amount"/>
                                <div class="text-muted">
                                    Set the deduction amount per missing hour (e.g., 100 DZD).
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

        <!-- Optional: Add to Payroll Settings menu -->
        <!-- You might need to create this menuitem if om_hr_payroll doesn't have one, or find its existing one -->
        <record id="dz_payroll_config_settings_action" model="ir.actions.act_window">
            <field name="name">Algeria Payroll Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'dz_payroll_localization'}</field>
        </record>

        <!-- Example: Add to a payroll configuration menu -->
        <!-- Ensure the parent menu (e.g., menu_hr_payroll_configuration) exists from om_hr_payroll or hr module -->
        <!-- <menuitem id="menu_dz_payroll_config"
                  name="Algeria Settings"
                  parent="hr.menu_hr_payroll_configuration"
                  sequence="100"
                  action="dz_payroll_config_settings_action"
                  groups="hr.group_hr_manager"/> -->
    </data>
</odoo>